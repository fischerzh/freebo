<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/salesslip_ll"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:id="@+id/sales_slip_ll_intro_help"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" 
        android:visibility="visible"
        >
	    <ImageView
	        android:id="@+id/sales_slip_intro_help_image"
	        android:layout_width="150dp"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_gravity="center_horizontal"
	        android:layout_marginBottom="10dp"
	        android:layout_marginTop="5dp"
	        android:src="@drawable/ic_foto_arrow" />

	    <ch.mobileking.classes.override.RobotoTextView
	        android:id="@+id/sales_slip_intro_help_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:text="Scanne einen ersten Kassenzettel ein!" />
	</LinearLayout>

    <LinearLayout
        android:id="@+id/salesslip_main_progress_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="vertical"
        android:visibility="gone"
        >

        <ch.mobileking.classes.override.RobotoTextView
            android:id="@+id/robotoTextView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Einkaufszettel wird hochgeladen..." />

        <ProgressBar
            android:id="@+id/salesslip_progress"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

    <ListView
        android:id="@+id/salesslip_lv"
        android:layout_width="fill_parent"
        android:layout_height="326dp"
        android:layout_weight="1.08"
        android:divider="@color/grey_dark"
        android:dividerHeight="2px"
        android:paddingTop="10dp" >
    </ListView>

    <Button
        android:id="@+id/salesslip_tab_btn_newscan"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_delete_scan_height"
        android:background="@android:color/black"
        android:text="+ Neuer Scan"
        android:textColor="@android:color/white" 
        android:visibility="gone"
        />

</LinearLayout>