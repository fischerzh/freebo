<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/prod_list_item_size"
    android:layout_marginLeft="5dp"
    android:minHeight="@dimen/prod_list_item_size"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingTop="5dp" 
    >

    <TextView
        android:id="@+id/prod_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Rivella Rot"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/prod_item_producer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Von Rivella"
        android:textColor="@android:color/darker_gray"
        android:textSize="14dp" />

    <View
        android:id="@+id/separator"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginRight="5dp"
        android:background="@color/common_action_bar_splitter" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="2dp"
        android:paddingTop="5dp" >

        <ImageView
            android:id="@+id/list_image"
            android:layout_width="50dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.03"
            android:src="@drawable/empty" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="0.5"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/prod_rank"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/grey_light"
                android:text="Rang 21 ( +2)"
         		android:textColor="@color/blue_light"
                android:textSize="20dp"
                android:textStyle="bold" 
                android:gravity="center_horizontal|center_vertical"
                />

            <TextView
                android:id="@+id/prod_collected"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="12 neue Punkte gesammelt"
                android:textColor="@color/blue_dark"
                android:textSize="12dp" 
                android:gravity="center_vertical|center_horizontal"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutCrown"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:orientation="vertical" 
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="2dp"
                android:paddingTop="5dp" >

                <ImageView
                    android:id="@+id/prod_item_crown"
                    android:layout_width="@dimen/prod_crown_width"
                    android:layout_height="@dimen/prod_crown_width"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:src="@drawable/no_crown"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/prod_crown_cnt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_weight="1"
                    android:hint="x 2"
                    android:textColor="#3B63D4"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="2dp"
                android:paddingTop="5dp" >

                <ImageView
                    android:id="@+id/prod_item_crown_2"
                    android:layout_width="@dimen/prod_crown_width"
                    android:layout_height="@dimen/prod_crown_width"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:src="@drawable/no_crown"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/prod_crown_cnt_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_weight="1"
                    android:hint="x 0"
                    android:textColor="#3B63D4"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="2dp"
                android:paddingTop="5dp" >

                <ImageView
                    android:id="@+id/prod_item_crown_3"
                    android:layout_width="@dimen/prod_crown_width"
                    android:layout_height="@dimen/prod_crown_width"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:src="@drawable/no_crown"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/prod_crown_cnt_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_weight="1"
                    android:hint="x 0"
                    android:textColor="#3B63D4"
                    android:textSize="18dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>