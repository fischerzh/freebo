<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/salesslip_item_top_linearLayout"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:layout_marginTop="20dp"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/zweifelpaprika" />
    </RelativeLayout>

    <ch.mobileking.classes.override.RobotoTextView
        android:id="@+id/salesslip_item_location"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical"
        android:maxLines="1"
        android:text="1 x Zweifel Paprika Chips"
        android:textColor="@color/grey_dark"
        android:textSize="@dimen/textSizeLarge"
        android:textStyle="bold" />

    <ch.mobileking.classes.override.RobotoTextView
        android:id="@+id/salesslip_item_verified_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical|center_horizontal"
        android:text="CHF 12.50"
        android:textColor="@color/grey_light"
        android:textSize="@dimen/textSizeMiddle" />

</LinearLayout>