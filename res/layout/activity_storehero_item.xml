<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/storehero_item_store_img"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_gravity="center_vertical|center_horizontal"
            android:src="@drawable/ic_logo_migros" />

        <LinearLayout
            android:layout_width="186dp"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ch.mobileking.classes.override.RobotoTextView
                android:id="@+id/storehero_item_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center_horizontal|center_vertical"
                android:paddingLeft="5dp"
                android:text="Migros ZÃ¼rich HB"
                android:textColor="@color/grey_dark"
                android:textSize="16dp"
                android:textStyle="bold" />

            <ch.mobileking.classes.override.RobotoTextView
                android:id="@+id/storehero_item_pts_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:text="23 x eingekauft"
                android:textColor="@color/blue_light"
                android:textSize="14dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/storehero_item_crown"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_crown_gold" />

            <ch.mobileking.classes.override.RobotoTextView
                android:id="@+id/storehero_item_crown_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Gold #1"
                android:textSize="14dp" />

        </LinearLayout>

    </LinearLayout>