<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loyalty_instructions_frame"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="@android:color/white"
    >

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/ivInstruction_scan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:clickable="false"
            android:paddingTop="5dp"
            android:scaleType="center"
            android:src="@drawable/info_scan_arrow" />

        <View
            android:id="@+id/separator"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/blue_dark" />

        <ch.mobileking.classes.override.RobotoTextView
            android:id="@+id/loyaltyInstruction_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@android:color/white"
            android:gravity="center_horizontal|center_vertical"
            android:paddingTop="5dp"
            android:textColor="@android:color/darker_gray"
            android:text="Clicke hier oben um eines deiner Lieblingsprodukte zu scannen!"
            android:textSize="20dp" />
    </LinearLayout>

</FrameLayout>