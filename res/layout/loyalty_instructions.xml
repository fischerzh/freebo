<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product_menuoverlay_layout"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#88666666" >

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/ivInstruction_scan"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@android:color/white"
            android:clickable="false"
            android:paddingTop="5dp"
            android:scaleType="center"
            android:src="@drawable/ic_loyal_arrow" />

        <View
            android:id="@+id/separator"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/blue_dark" />

        <ch.mobileking.classes.override.RobotoTextView
            android:id="@+id/ivInstruction_text"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_weight="1.64"
            android:background="@android:color/white"
            android:gravity="center_horizontal|center_vertical"
            android:paddingTop="5dp"
            android:text="So funktioniert&apos;s. Oben rechts auf Scanner Button clicken und Barcode einlesen - Fertig!"
            android:textSize="20dp" />

        <View
            android:id="@+id/separator2"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/blue_dark" />

                <View
            android:id="@+id/separator2"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/common_action_bar_splitter" />
        
        
        <Button
            android:id="@+id/prod_recomm_btnNext"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/white"
            android:text="Weiter"
            android:textColor="@android:color/black"
            android:visibility="visible" />
    </LinearLayout>

</FrameLayout>