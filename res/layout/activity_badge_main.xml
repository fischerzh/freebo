<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_badge_main_ll"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ch.mobileking.classes.override.RobotoTextView
        android:id="@+id/act_badge_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Gesammelte Badges"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/textSizeLarge"
        android:textStyle="italic" />

    <ch.mobileking.classes.override.RobotoTextView
        android:id="@+id/act_badge_logins_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Logins"
        android:textColor="@android:color/darker_gray"
        android:textSize="18dp" />

    <View
        android:id="@+id/separator"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginRight="5dp"
        android:background="@color/common_action_bar_splitter" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/act_badge_login1"
            android:layout_width="0dp"
            android:layout_height="@dimen/badge_detail_image"
            android:layout_weight="1"
            android:src="@drawable/ic_1_log_in" />

        <ImageView
            android:id="@+id/act_badge_login2"
            android:layout_width="0dp"
            android:layout_height="@dimen/badge_detail_image"
            android:layout_weight="1.00"
            android:src="@drawable/ic_50_log_in_false" />

        <ImageView
            android:id="@+id/act_badge_login3"
            android:layout_width="0dp"
            android:layout_height="@dimen/badge_detail_image"
            android:layout_weight="1"
            android:src="@drawable/ic_100_log_in_false" />
    </LinearLayout>

    <ch.mobileking.classes.override.RobotoTextView
        android:id="@+id/act_badge_optin_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Favoriten (Opt-In)"
        android:textColor="@android:color/darker_gray"
        android:textSize="18dp" />

    <View
        android:id="@+id/separator"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginRight="5dp"
        android:background="@color/common_action_bar_splitter" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/act_badge_optin1"
            android:layout_width="0dp"
            android:layout_height="@dimen/badge_detail_image"
            android:layout_weight="1"
            android:src="@drawable/ic_1_opt_in_false" />

        <ImageView
            android:id="@+id/act_badge_optin2"
            android:layout_width="0dp"
            android:layout_height="@dimen/badge_detail_image"
            android:layout_weight="1.00"
            android:src="@drawable/ic_5_opt_in_false" />

        <ImageView
            android:id="@+id/act_badge_optin3"
            android:layout_width="0dp"
            android:layout_height="@dimen/badge_detail_image"
            android:layout_weight="1"
            android:src="@drawable/ic_10_opt_in_false" />
    </LinearLayout>

    <ch.mobileking.classes.override.RobotoTextView
        android:id="@+id/act_badge_shopping_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="EinkÃ¤ufe"
        android:textColor="@android:color/darker_gray"
        android:textSize="18dp" />

    <View
        android:id="@+id/separator"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginRight="5dp"
        android:background="@color/common_action_bar_splitter" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/act_badge_shopping1"
            android:layout_width="0dp"
            android:layout_height="@dimen/badge_detail_image"
            android:layout_weight="1"
            android:src="@drawable/ic_5_purchase_false" />

        <ImageView
            android:id="@+id/act_badge_shopping2"
            android:layout_width="0dp"
            android:layout_height="@dimen/badge_detail_image"
            android:layout_weight="1.00"
            android:src="@drawable/ic_10_purchase_false" />

        <ImageView
            android:id="@+id/act_badge_shopping3"
            android:layout_width="0dp"
            android:layout_height="@dimen/badge_detail_image"
            android:layout_weight="1"
            android:src="@drawable/ic_30_purchase_false" />
    </LinearLayout>

</LinearLayout>