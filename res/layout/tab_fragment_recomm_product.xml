<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_recomm_linearLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ch.mobileking.classes.override.RobotoTextView
        android:id="@+id/prod_recomm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Um aktuelle Bestseller zu sehen, wähle ein Kategorie aus."
        android:textColor="@android:color/darker_gray"
        android:textSize="14dp"
        android:textStyle="italic" />

    <ch.mobileking.classes.override.RobotoTextView
        android:id="@+id/prod_recomm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:text="Aktuelle Bestseller"
        android:textColor="@android:color/darker_gray"
        android:textSize="20dp"
        android:textStyle="italic" />

    <View
        android:id="@+id/separator"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/common_action_bar_splitter" />

    <GridView
        android:id="@+id/fragment_grid_view"
        android:layout_width="fill_parent"
        android:layout_height="110dp"
        android:background="@android:color/white"
        android:clipToPadding="true"
        android:gravity="center"
        android:horizontalSpacing="1dp"
        android:numColumns="4"
        android:paddingLeft="1dp"
        android:paddingTop="5dp"
        android:stretchMode="columnWidth"
        android:verticalSpacing="1dp" >
    </GridView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="218dp"
        android:layout_marginTop="5dp"
        android:layout_weight="0.75"
        android:orientation="vertical" >

        <ch.mobileking.classes.override.RobotoTextView
            android:id="@+id/prod_recomm_choose_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Wähle eine Kategorie"
            android:textColor="@android:color/darker_gray"
            android:textStyle="italic"
       		android:textSize="20dp" />

        <View
            android:id="@+id/separator"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/common_action_bar_splitter" />

        <ListView
            android:id="@+id/fragment_listView"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:divider="@color/grey_dark"
            android:dividerHeight="2px"
            android:paddingTop="10dp" />
    </LinearLayout>

</LinearLayout>