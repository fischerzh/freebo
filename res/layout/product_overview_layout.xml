<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <!-- <include -->
    <!-- android:id="@+id/header" -->
    <!-- android:layout_width="fill_parent" -->
    <!-- android:layout_height="wrap_content" -->
    <!-- layout="@layout/action_bar_home" /> -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/product_btn_scan"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.33"
            android:background="@null"
            android:src="@drawable/btn_scan" />

        <ImageButton
            android:id="@+id/product_btn_share"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.33"
            android:background="@null"
            android:src="@android:drawable/ic_menu_share" />

        <!-- <EditText -->
        <!-- android:id="@+id/product_search_box" -->
        <!-- android:layout_width="fill_parent" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:layout_weight="0.5" -->
        <!-- android:drawableRight="@android:drawable/ic_menu_search" -->
        <!-- android:hint="Search" /> -->

        <ImageButton
            android:id="@+id/product_btn_edit"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.33"
            android:background="@null"
            android:src="@android:drawable/ic_menu_edit" />
    </LinearLayout>

    <ListView
        android:id="@+id/product_list_view"
        android:layout_width="fill_parent"
        android:layout_height="326dp"
        android:layout_weight="1.08" 
        android:paddingTop="10dp"
        />

    <Button
        android:id="@+id/product_btn_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete marked Items" />

</LinearLayout>