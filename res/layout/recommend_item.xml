<!-- http://stackoverflow.com/questions/16819135/set-fixed-gridview-row-height -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gridItem"
    android:layout_width="wrap_content"
	android:layout_height="match_parent"
	android:minHeight="125dp"
    android:background="#FFFFFF"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="2dp" >

    <ch.mobileking.classes.override.RobotoTextView
        android:id="@+id/prod_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Cola Zero"
        android:textSize="16dp"
        />

    <ImageView
        android:id="@+id/prod_item_pict"
        android:layout_width="50dip"
        android:layout_height="45dip"
        android:layout_weight="0.8"
        android:src="@drawable/zweifelpaprika"
        android:visibility="visible" />

</LinearLayout>