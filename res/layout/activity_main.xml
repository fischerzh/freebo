<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="275dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/scart_screen" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtPassword"
        android:layout_alignRight="@+id/txtPassword"
        android:layout_below="@+id/txtPassword"
        android:text="Login"
        android:gravity="center_horizontal|center_vertical" />

    <EditText
        android:id="@+id/txtPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtUsername"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="******"
        android:inputType="textPassword"
        android:text="test" />

    <EditText
        android:id="@+id/txtUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/txtPassword"
        android:layout_below="@+id/imageView1"
        android:ems="10"
        android:hint="username"
        android:inputType="textPersonName"
        android:text="test" >

        <requestFocus />
    </EditText>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignBottom="@+id/txtPassword"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

        <CheckBox
            android:id="@+id/main_stay_loggedIn_chkB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btnLogin"
            android:layout_below="@+id/btnLogin"
            android:textSize="@dimen/textSizeSmall"
            android:text="Angemeldet bleiben " />

        <ch.mobileking.classes.override.RobotoTextView
            android:id="@+id/main_forgot_pw_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_stay_loggedIn_chkB"
            android:layout_toLeftOf="@+id/main_register_txt"
            android:textSize="@dimen/textSizeSmall"
            android:text="Passwort vergessen|"
            android:textColor="@color/blue_light" />

        <ch.mobileking.classes.override.RobotoTextView
            android:id="@+id/main_register_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/btnLogin"
            android:layout_below="@+id/main_stay_loggedIn_chkB"
            android:text="Registrieren"
            android:textSize="@dimen/textSizeSmall"
            android:textColor="@color/blue_light" />

        <FrameLayout
            android:id="@+id/main_rel_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:visibility="invisible"
            android:background="#F2FFFFFF"
            
            >
        </FrameLayout>

</RelativeLayout>