<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/salesslip_item_detail_top_linearLayout"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:layout_marginTop="20dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/salesslip_item_detail_image"
        android:layout_width="@dimen/sales_slip_item_width"
        android:layout_height="wrap_content"
        android:src="@drawable/zweifelpaprika" />

    <ch.mobileking.classes.override.RobotoTextView
        android:id="@+id/salesslip_item_detail_product"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal|center_vertical"
        android:text="1 x Zweifel Paprika Chips"
        android:textColor="@color/grey_dark"
        android:textSize="@dimen/textSizeLarge"/>

    <ch.mobileking.classes.override.RobotoTextView
        android:id="@+id/salesslip_item_detail_price"
        android:layout_width="@dimen/sales_slip_detail_item_price_width"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:gravity="center_vertical|center_horizontal"
        android:text="12.50 CHF"
        android:textColor="@color/grey_light"
        android:textSize="@dimen/textSizeMiddle" />

</LinearLayout>