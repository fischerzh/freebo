<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ch.mobileking.classes.override.RobotoTextView
        android:id="@+id/salesslip_detail_pos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
        android:text="Einkaufsort"
        android:textSize="20dp"
        android:textStyle="italic" />

    <ch.mobileking.classes.override.RobotoTextView
        android:id="@+id/salesslip_detail_pos_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
        
        android:text="9 Dec 2013 16:15:25"
        android:textColor="@android:color/black"
        android:textSize="18dp" />

    <View
        android:id="@+id/separator"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginRight="5dp"
        android:background="@color/common_action_bar_splitter" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
        
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/salesslip_detail_pos_image"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_gravity="center_vertical|center_horizontal"
            android:src="@drawable/ic_logo_migros" />

        <ch.mobileking.classes.override.RobotoTextView
            android:id="@+id/salesslip_detail_points_cnt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|center_horizontal"
            android:text="Total: 55 Pkt."
            android:textColor="@color/blue_light"
            android:textSize="@dimen/textSizeMiddle"
            android:textStyle="bold" />

    </LinearLayout>

    <ch.mobileking.classes.override.RobotoTextView
        android:id="@+id/salesslip_detail_items_titel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
        
        android:text="Verifizierte EinkÃ¤ufe"
        android:textColor="@android:color/black"
        android:textSize="18dp" />

    <View
        android:id="@+id/separator"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginRight="5dp"
        android:background="@color/common_action_bar_splitter" />

    <GridView
        android:id="@+id/salesslip_detail_grid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true"
        android:gravity="center"
        android:horizontalSpacing="1dp"
        android:paddingLeft="1dp"
        android:paddingTop="1dp"
        android:verticalSpacing="1dp" >
    </GridView>

</LinearLayout>