<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/productDetailLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginLeft="5dp"
    android:orientation="vertical" >

    <ch.mobileking.classes.override.RobotoTextView
        android:id="@+id/badges_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Zweifel Chips"
        android:textSize="20dp"
        android:textStyle="italic" />

    <ch.mobileking.classes.override.RobotoTextView
        android:id="@+id/badges_detail_manufacturer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zweifel Pomy-Chips AG"
        android:textColor="@android:color/black"
        android:textSize="18dp" />

    <View
        android:id="@+id/separator"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginRight="5dp"
        android:background="@color/common_action_bar_splitter" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/badges_detail_image"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_gravity="center_vertical|center_horizontal"
            android:src="@drawable/zweifelpaprika" />

        <ch.mobileking.classes.override.RobotoTextView
            android:id="@+id/badges_detail_prod_rank"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:paddingLeft="5dp"
            android:drawablePadding="5sp"
            android:layout_marginLeft="5dp"
            android:drawableRight="@drawable/ic_arrow_up_black"
            android:gravity="center_horizontal|center_vertical"
            android:text="RANG: 21 (+2)"
            android:textColor="@color/blue_light"
            android:textSize="16dp"
            android:textStyle="bold" />

        <ch.mobileking.classes.override.RobotoTextView
            android:id="@+id/badges_detail_cnt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|center_horizontal"
            android:text="Total: 55 x gesammelt"
            android:textColor="@color/blue_light"
            android:textSize="14dp"
            android:textStyle="bold" />

    </LinearLayout>

    <ch.mobileking.classes.override.RobotoTextView
        android:id="@+id/product_detail_header2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Kronen gesammelt"
        android:textColor="@android:color/black"
        android:textSize="18dp" />

    <View
        android:id="@+id/separator"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginRight="5dp"
        android:background="@color/common_action_bar_splitter" />

    <GridView
        android:id="@+id/badges_grid_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true"
        android:gravity="center"
        android:horizontalSpacing="1dp"
        android:numColumns="2"
        android:paddingLeft="1dp"
        android:paddingTop="1dp"
        android:stretchMode="columnWidth"
        android:verticalSpacing="1dp" >
    </GridView>

</LinearLayout>