<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/productRecommendationLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ch.mobileking.classes.override.RobotoTextView
        android:id="@+id/prod_recomm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Willkommen! Bitte wähle zuerst einige Kategorien aus, damit wir Dir interessante Angebote zeigen können!"
        android:textColor="@android:color/darker_gray"
        android:textSize="14dp"
        android:textStyle="italic" />

    <ch.mobileking.classes.override.RobotoTextView
        android:id="@+id/prod_recomm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:text="Aktuelle Bestseller"
        android:textColor="@android:color/darker_gray"
        android:textSize="16dp"
        android:textStyle="italic" />

    <View
        android:id="@+id/separator"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/common_action_bar_splitter" />

    <GridView
        android:id="@+id/prod_recomm_grid_view"
        android:layout_width="fill_parent"
        android:layout_height="125dp"
        android:background="@android:color/white"
        android:clipToPadding="true"
        android:gravity="center"
        android:horizontalSpacing="1dp"
        android:numColumns="4"
        android:paddingLeft="1dp"
        android:paddingTop="5dp"
        android:stretchMode="columnWidth"
        android:verticalSpacing="1dp" >
    </GridView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="218dp"
        android:layout_marginTop="5dp"
        android:layout_weight="0.75"
        android:orientation="vertical" >

        <ch.mobileking.classes.override.RobotoTextView
            android:id="@+id/prod_recomm_choose_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Oder wähle aus einer Kategorie aus"
            android:textColor="@android:color/darker_gray"
            android:textSize="16dp" />

        <View
            android:id="@+id/separator"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/common_action_bar_splitter" />

        <ListView
            android:id="@+id/prod_recomm_listView"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:divider="@color/grey_dark"
            android:dividerHeight="2px"
            android:paddingTop="10dp" />
    </LinearLayout>

    <Button
        android:id="@+id/prod_recomm_btnDelete"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/black"
        android:text="Next"
        android:textColor="@android:color/white"
        android:visibility="visible" />

</LinearLayout>